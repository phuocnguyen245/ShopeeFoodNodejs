<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Submit Your Recipe</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">Share your amazing recipies with thousands of web developers accross the world. Fill our form to
            get started.</p>
    </div>
</div>



<div class="container">
    
    <% shop.forEach((input)=>{ %> 
        <form action="/manaInterface/updateById/<%- input._id %>?_method=PUT" enctype="multipart/form-data" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <div class="row g-3">
                
                <div class="col-12">
                    <label for="shopName" class="form-label">Tên Shop</label>
                    <input type="shopName" name="shopName" id="shopName" class="form-control" value="<%- input.shopName %>" >
                </div>

                <div class="col-12">
                    <label for="address" class="form-label">Địa chỉ</label>
                    <input type="text" name="address" id="address" class="form-control" value="<%- input.address %>" required>
                </div>

                <div class="col-12">
                    <label for="cost" class="form-label">Giá</label>
                    <input type="number" id="cost" class="form-control" name="cost" value="<%- input.cost %>"></input>
                </div>

                <div class="col-12">
                    <label for="category">Select Category</label>
                    <select class="form-select form-control" name="category" aria-label="Category">
                        <option selected><%- input.category %></option>
                        <option value="1">1. Đồ ăn</option>
                        <option value="2">2. Đồ uống</option>
                        <option value="3">3. Ăn vặt</option>
                        <option value="4">4. Đồ ăn no</option>
                        <option value="5">5. Đồ ăn no sơ sơ</option>
                    </select>
                </div>
                
                <div class="col-12">
                    <label for="image">Product Image</label>
                    <input type="file" class="form-control" name="image" accept="image/*" value="<%- input.img %>">
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary right">Update Shop</button>
                </div>

            </div>
        </form>
    <% }) %>
</div>



