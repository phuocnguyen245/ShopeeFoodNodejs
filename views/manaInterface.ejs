
<div class="container" style="margin-top: 65px">

    <div class="table-control" style="padding-top:50px">
        <a href="/createNew" class="btn btn-primary mb-2" style="float: right">Thêm mới</a>
        <table class="table table-striped table-hover table-bordered paginated">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Hình ảnh</th>
                    <th scope="col">Tên shop</th>
                    <th scope="col">Địa chỉ</th>
                    <th scope="col">Giá</th>
                    <th scope="col">Xử lí</th>
                </tr>
            </thead>
            <% shops.forEach((shop,index)=> {%>
                <tbody>
                    <tr>
                        <th scope="row"><%- index+1 %></th>
                        <td><img src="../../img/<%- shop.img %>" width="70px" height="40px" alt=""></td>
                        <td><%- shop.shopName %></td>
                        <td><%- shop.address %></td>
                        <td><%- shop.cost %></td>
                        <td>
                            <a href="/manaInterface/updateById/<%- shop._id %>">Update</a>
                            <a href="/manaInterface/deleteById/<%- shop._id %>">Delete</a>
                        </td>
                    </tr>
                </tbody>
                <% }) %>
        </table>
    </div>
</div>
</div>